<Window x:Class="OptimizationSem8.Views.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:OptimizationSem8.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Изменить пароль" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <StackPanel>
            
            <PasswordBox x:Name="NewPasswordBox"
                         materialDesign:HintAssist.Hint="Новый пароль"
                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                         Margin="0,10,0,10" />

            <PasswordBox x:Name="ConfirmPasswordBox"
                         materialDesign:HintAssist.Hint="Подтвердите новый пароль"
                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                         Margin="0,10,0,10" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Отмена"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Click="CancelButton_Click"
                        Margin="0,0,10,0" />
                <Button Content="Сохранить"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Click="SaveButton_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>